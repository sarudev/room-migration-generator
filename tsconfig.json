{
  "compileOnSave": true,
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["ESNext.Array", "dom", "es2024"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "outDir": "./dist/",
    "removeComments": false,
    "sourceMap": true,
    "target": "es6"
  },
  "exclude": ["./dist", "node_modules/*"]
}
